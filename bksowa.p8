version 18
__lua__
function _init()
  px=16
  py=64
  vx=0
  vy=0
end

function _update()
  if btn(0) then
    px-=2
  elseif btn(1) then
    px+=2
  end
  
  if btnp(2) then
    vy = -5
  elseif grounded() then
    vy = 0
    y = flr(flr(py)/8)*8
  else
    vy += 0.5
  end
  
  px += min(vx, 2)
  py += min(vy, 5)	
end

function _draw()
  cls()
  map(0, 0, 0, 0, 20, 20)
  spr(1, px, py, 2, 2)
end

function grounded()
  local v = mget(flr(px + 8) / 8, flr(py + 16) / 8)
  return fget(v, 0)
end
