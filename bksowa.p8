pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
function _init()
  //screen state
  screen = 1  //title
  //10 = gameplay
  //99 = game over

		//player position
  px=16
  py=64
  
  //player velocity
  vx=0
  vy=0
  
  //camera position
  cx=0
  
  //camera velocity
  cvx=2
end

function _update()
  if screen == 1 then
    if btn() > 0 then
      screen = 10
    end  
  end

  if screen == 10 then
		  if btnp(2) then
		    vy = -6
		  elseif grounded() then
		    vy = 0
		    y = flr(flr(py)/8)*8
		  else
		    vy += 0.55
		  end
		  
		  px += min(vx, 2)
		  py += min(vy, 5)	
  end
end

function _draw()
  cls()
  
  if screen == 1 then
    color(12)
    print("bksowa temporary",32,32)
    print("title graphic",38,40)
  	 color(13)
  	 print("press a button to start", 20, 64)
  end
  
  if screen == 10 then
		  map(0, 0, 0, 0, 1000, 20)
		  
		  px += cvx
		  spr(1, px, py, 2, 2)
  
    cx += cvx
    camera(cx, 0)

    if cx > 900 then
      cx = 0
    		px = 0
  		end
  end
end

function grounded()
  local v = mget(flr(px + 8) / 8, flr(py + 16) / 8)
  return fget(v, 0)
end
